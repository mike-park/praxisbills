.data.stdTable
  %table
    %thead
      %tr
        %th Last Name
        %th First Name
        %th Last Inv
        %th Billed
        %th Received
        %th Owed
        %th
    %tbody
      - patients.each do |patient|
        %tr
          %td= patient.last_name
          %td= patient.first_name
          %td= last_invoice_date(patient)
          %td.txtR= total_billed(patient)
          %td.txtR= total_received(patient)
          %td.txtR= owed_to_us(patient)
          %td= link_actions_for(patient)

