<tr>
  <td>
    <%= f.collection_select :therapy_id, Therapy.order("code").all,
    :id, :select_name, { :prompt => 'Therapy type' }, :autofocus => true %>
  </td>
  <td class="qty">
    <%= f.text_field :quantity, :size => 4 %>
  </td>
  <td class="price">
    <%= f.text_field :unit_price, :size => 8 %>
  </td>
  <% if f.object.new_record? %>
  <td colspan="3">
    <%= f.submit 'Add Therapy' %>
  </td>
  <% else %>
  <td colspan="2">
    <%= f.submit 'Update Therapy' %>
  </td>
  <td class='link'>
    <%= link_to_destroy auth_bill_item_path(@auth, f.object) %>
  </td>
  <% end -%>
</tr>
